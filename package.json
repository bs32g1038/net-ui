{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "deepmerge": "^4.2.2",
    "vue": "^2.6.11",
    "vue-i18n": "^8.16.0",
    "vue-router": "^3.1.6",
    "vue-template-compiler": "^2.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "node-sass": "^4.13.1",
    "ora": "^4.0.3",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "shelljs": "^0.8.3",
    "vuepress": "^1.4.0",
    "yaml-loader": "^0.6.0"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "bootstrap": "lerna bootstrap",
    "docs": "vuepress dev docs",
    "format": "prettier **/**/*.{ts,tsx,js,vue} --config ./.prettierrc --ignore-path ./.prettierignore --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
